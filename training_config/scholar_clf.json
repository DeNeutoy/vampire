{
    "random_seed": 1000,
    "numpy_seed": 34,
    "pytorch_seed": 233,
    "dataset_reader": {
        "type": "textcat_with_metadata",
        "debug": false
    },
    "vocabulary":{
     "max_vocab_size": 2000,
    },
  "datasets_for_vocab_creation": ["train"],
  "train_data_path": "/home/ubuntu/train_df_with_metadata_1.csv",
  "validation_data_path": "/home/ubuntu/test_df_with_metadata_1.csv",
    "model": {
        "type": "vae_classifier",
        "vae": {
            "type": "scholar",
            "mode": "supervised",
            "distribution": "vmf",
            "hidden_dim": 128,
            "latent_dim": 50,
            "text_field_embedder": {
                "token_embedders": {
                    "tokens": {
                        "type": "embedding",
                        "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.6B.50d.txt.gz",
                        "embedding_dim": 50,
                        "vocab_namespace": "full",
                        "trainable": true
                    },
                }
            },
            "encoder": {
                "input_dim": 2000,
                "num_layers": 1,
                "hidden_dims": 256,
                "activations": "softplus",
                "dropout": 0.2
            },
            "decoder": {
                "input_dim": 50,
                "num_layers": 1,
                "hidden_dims": 256,
                "activations": "softplus",
                "dropout": 0.2
            },
            "classifier":{
                "input_dim": 50,
                "num_layers": 1,
                "hidden_dims": 128,
                "activations": "relu",
            }
        }, 
        "classifier":{
            "input_dim": 2000,
            "num_layers": 1,
            "hidden_dims": 128,
            "activations": "relu",
        }       
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["tokens", "num_tokens"]],
        "batch_size": 32
    },
     "trainer": {
        "optimizer": {
            "type": "adam",
            "lr": 0.0004
        },
        "validation_metric": "+accuracy",
        "num_serialized_models_to_keep": 2,
        "num_epochs": 75,
        "grad_norm": 10.0,
        "patience": 5,
        "cuda_device": 0,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 0
        }
    }
}
