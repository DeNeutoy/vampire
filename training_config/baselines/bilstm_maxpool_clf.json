
{
    "dataset_reader": {
        "lazy": false,
        "type": "textcat",
        "word_tokenizer": {
            "word_splitter": "just_spaces"
        },
        "debug": false,
        "use_vae_vocab": false,
        "add_stop_end_tokens": false,
        "read_filtered_data": false,
        "remove_labels": false,
        "max_seq_length": 400
    },
    "validation_dataset_reader": {
        "lazy": false,
        "type": "textcat",
        "use_vae_vocab": false,
        "word_tokenizer": {
            "word_splitter": "just_spaces"
        },
        "debug": false,
        "add_stop_end_tokens": false,
        "read_filtered_data": false,
        "remove_labels": false,
        "max_seq_length": 400
    },
    "vocabulary":{
        "type": "vocabulary_with_pretrained_vae",
        "supervised_vocab_file": "/home/ubuntu/data/imdb/full/vocabulary/full.txt",
        "pad": true
    },
"datasets_for_vocab_creation": ["train"],
"train_data_path": "/home/ubuntu/data/imdb/full/train.jsonl",
"validation_data_path": "/home/ubuntu/data/imdb/full/dev.jsonl",
    "model": {
        "type": "seq2seq_classifier",
        "continuous_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 300,
                    "trainable": true,
                    "vocab_namespace": "full",
                },
            },
        },
        "encoder": {
            "type": "lstm",
            "num_layers": 1,
            "bidirectional": true,
            "input_size": 300,
            "hidden_size": 256, 
         },
        "share_theta": false,
        "share_encoder": false,
        "freeze_weights": false
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["tokens", "num_tokens"]],
        "batch_size": 32
    },
    "trainer": {
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        },
        "validation_metric": "+accuracy",
        "num_serialized_models_to_keep": 2,
        "num_epochs": 75,
        "grad_norm": 10.0,
        "patience": 20,
        "cuda_device": 0,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 0
        }
    }
}
