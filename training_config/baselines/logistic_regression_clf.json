{
    "dataset_reader": {
        "type": "textcat",
        "debug": false,
        "remove_labels": false,
        "max_seq_length": 400
    },
    "validation_dataset_reader": {
        "type": "textcat",
        "debug": false,
        "remove_labels": false,
        "max_seq_length": 400
    },
    "vocabulary":{
        "directory_path": "/home/ubuntu/data/imdb_scholar/vocabulary/"
    },
"datasets_for_vocab_creation": ["train"],
"train_data_path": "/home/ubuntu/data/imdb_scholar/train.tokens",
"validation_data_path": "/home/ubuntu/data/imdb_scholar/test.tokens",
    "model": {
        "type": "logistic_regression",
        "onehot_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "onehot_token_embedder",
                    "vocab_namespace": "full"
                }
            }
        }
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["tokens", "num_tokens"]],
        "batch_size": 32
    },
    "trainer": {
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        },
        "validation_metric": "+accuracy",
        "num_serialized_models_to_keep": 2,
        "num_epochs": 75,
        "grad_norm": 10.0,
        "patience": 20,
        "cuda_device": 6,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 0
        }
    }
}

