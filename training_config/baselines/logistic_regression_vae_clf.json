{
    "dataset_reader": {
        "lazy": false,
        "type": "textcat",
        "tokenizer": {
            "word_splitter": "just_spaces"
        },
        "token_indexers": {
            "tokens": {
                "type": "single_id",
                "lowercase_tokens": true
            },
	        // "vae_tokens": {
		    //     "type": "single_id",
            //     "namespace": "vae",
            //     "lowercase_tokens": true
		    // }
        },
        "debug": false,
        "add_stop_end_tokens": false,
        "read_filtered_data": false,
        "remove_labels": false,
        "max_seq_length": 400
    },
    "vocabulary":{
        "type": "vocabulary_with_pretrained_vae",
        "supervised_vocab_file": "/home/ubuntu/data/ag-news/full/vocabulary/full.txt",
        // "vae_vocab_file": "/home/ubuntu/vae/model_logs/nvdm/nvdm_ff_ff_ln_recon_none_AG/vocabulary/full.txt",
        "pad": false,
        "add_stop_end_tokens": false
    },
"datasets_for_vocab_creation": ["train"],
"train_data_path": "/home/ubuntu/data/ag-news/full/train.jsonl",
"validation_data_path": "/home/ubuntu/data/ag-news/full/dev.jsonl",
    "model": {
        "type": "logistic_regression",
        "embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "onehot_token_embedder",
                    "vocab_namespace": "full"
                },
                // "vae_tokens": {
                //     "type": "vae_token_embedder",
                //     "model_archive": "/home/ubuntu/vae/model_logs/nvdm/nvdm_ff_ff_ln_recon_none_AG/model.tar.gz",
                //     "dropout": 0.2
                // }
            }
        }
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["tokens", "num_tokens"]],
        "batch_size": 32
    },
    "trainer": {
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        },
        "validation_metric": "+accuracy",
        "num_serialized_models_to_keep": 2,
        "num_epochs": 75,
        "grad_norm": 10.0,
        "patience": 20,
        "cuda_device": 0,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 0
        }
    }
}

