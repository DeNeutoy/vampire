{
    "dataset_reader": {
        "lazy": false,
        "type": "textcat",
        "word_tokenizer": {
            "word_splitter": "just_spaces"
        },
        "debug": false,
        "use_vae_vocab": true,
        "add_stop_end_tokens": false,
        "read_filtered_data": false,
        "remove_labels": false,
        "max_seq_length": 400
    },
    "validation_dataset_reader": {
        "lazy": false,
        "type": "textcat",
        "use_vae_vocab": true,
        "word_tokenizer": {
            "word_splitter": "just_spaces"
        },
        "debug": false,
        "add_stop_end_tokens": false,
        "read_filtered_data": false,
        "remove_labels": false,
        "max_seq_length": 400
    },
    "vocabulary":{
        // "directory_path": "/home/ubuntu/data/ag-news/full/vocabulary/",
        "type": "vocabulary_with_pretrained_vae",
        "supervised_vocab_file": "/home/ubuntu/data/imdb/full/vocabulary/full.txt",
        "vae_vocab_file": "/home/ubuntu/vae/model_logs/nvdm/nvdm_ff_ff_ln_recon_none_IMDB/vocabulary/full.txt"
    },
"datasets_for_vocab_creation": ["train"],
"train_data_path": "/home/ubuntu/data/imdb/full/train.jsonl",
"validation_data_path": "/home/ubuntu/data/imdb/full/dev.jsonl",
    "model": {
        "type": "logistic_regression",
        "onehot_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "onehot_token_embedder",
                    "vocab_namespace": "full"
                }
            }
        },
        "pretrained_vae_file": "model_logs/nvdm/nvdm_ff_ff_ln_recon_none_IMDB/model.tar.gz",
        "share_theta": true,
        "share_encoder": true,
        "freeze_weights": true
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["tokens", "num_tokens"]],
        "batch_size": 32
    },
    "trainer": {
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        },
        "validation_metric": "+accuracy",
        "num_serialized_models_to_keep": 2,
        "num_epochs": 75,
        "grad_norm": 10.0,
        "patience": 20,
        "cuda_device": 0,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 0
        }
    }
}

