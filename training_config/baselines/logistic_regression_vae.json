{
    "dataset_reader": {
        "lazy": false,
        "type": "semisupervised_text_classification_json",
        "sample": 200,
        "tokenizer": {
            "word_splitter": "just_spaces"
        },
        "token_indexers": {
            "tokens": {
                "type": "single_id",
                "namespace": "tokens",
                "lowercase_tokens": true
            },
            "vae_tokens": {
		        "type": "single_id",
                "namespace": "vae",
                "lowercase_tokens": true,
		    }
        },
        "ignore_labels": false,
        "shift_target": false,
        "sequence_length": 400
    },
    "validation_dataset_reader": {
        "lazy": false,
        "type": "semisupervised_text_classification_json",
        "tokenizer": {
            "word_splitter": "just_spaces",
        },
        "token_indexers": {
            "tokens": {
                "type": "single_id",
                "namespace": "tokens",
                "lowercase_tokens": true
            },
            "vae_tokens": {
		        "type": "single_id",
                "namespace": "vae",
                "lowercase_tokens": true
		    }
        },
        "ignore_labels": false,
        "shift_target": false,
        "sequence_length": 400
    },
    "vocabulary":{
        "type": "vocabulary_with_vae",
        "vae_vocab_file": "/home/ubuntu/vae/model_logs/nvdm/vocabulary/vae.txt",
    },
"datasets_for_vocab_creation": ["train"],
"train_data_path": "/home/ubuntu/vae/dump/imdb/train.jsonl",
"validation_data_path": "/home/ubuntu/vae/dump/imdb/test.jsonl",
    "model": {
        "type": "logistic_regression",
        "onehot_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "bag_of_word_counts",
                },
                "vae_tokens": {
                    "type": "vae_token_embedder",
                    "model_archive": "/home/ubuntu/vae/model_logs/nvdm/model.tar.gz",
                    "combine": true, 
                    "dropout": 0.2
                }
            }
        }
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["tokens", "num_tokens"]],
        "batch_size": 32
    },
    "trainer": {
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        },
        "validation_metric": "+accuracy",
        "num_serialized_models_to_keep": 2,
        "num_epochs": 75,
        "grad_norm": 10.0,
        "patience": 5,
        "cuda_device": 0,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 0
        }
    }
}

