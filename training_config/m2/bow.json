{
    "random_seed": 23,
    "numpy_seed": 11,
    "pytorch_seed": 555,
    "dataset_reader": {
        "type": "textcat",
        "debug": false,
        "remove_labels": false,
        "max_seq_length": 50,
        // "unlabeled_data": "/home/ubuntu/data/imdb/train_500_unlabeled.jsonl"
    },
    "validation_dataset_reader": {
        "type": "textcat",
        "debug": false,
        "remove_labels": false,
        "max_seq_length": 50,
    },
    "vocabulary":{
        "max_vocab_size": 30000
        },
  "datasets_for_vocab_creation": ["train"],
  "train_data_path": "/home/ubuntu/data/ag/train.jsonl",
  "validation_data_path": "/home/ubuntu/data/ag/test.jsonl",
    "model": {
        "type": "bow_vae_classifier",
        "vae": {
            "type": "bag_of_words_vae",
            "distribution": "normal",
            "hidden_dim": 128,
            "latent_dim": 50,
            "num_labels": 4,
            "dropout": 0.5,
            "encoder": {
                "input_dim": 30000,
                "num_layers": 1,
                "hidden_dims": 256,
                "activations": "softplus",
                "dropout": 0.2
            },
            "decoder": {
                "input_dim": 50,
                "num_layers": 1,
                "hidden_dims": 256,
                "activations": "softplus",
                "dropout": 0.2
            },
            "classifier":{
                "input_dim": 256,
                "num_layers": 1,
                "hidden_dims": 128,
                "activations": "relu",
            }
        },
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["tokens", "num_tokens"]],
        "batch_size": 32
    },
     "trainer": {
        "optimizer": {
            "type": "adam",
            "lr": 0.0004
        },
        "validation_metric": "+accuracy",
        "num_serialized_models_to_keep": 2,
        "num_epochs": 75,
        "grad_norm": 10.0,
        "patience": 5,
        "cuda_device": 0,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 0
        }
    }
}

