{
    "random_seed": 1000,
    "numpy_seed": 34,
    "pytorch_seed": 233,
    "dataset_reader": {
        "type": "textcat",
    },
    "vocabulary":{
        "max_vocab_size": 30000
        },
  "datasets_for_vocab_creation": ["train"],
  "train_data_path": "s3://suching-dev/dbpedia_csv/train_df.csv",
  "validation_data_path": "s3://suching-dev/dbpedia_csv/test_df.csv",
    "model": {
        "type": "vae_classify_decoder",
        "vae": {
            "type": "rnn_vae",
            "mode": "supervised",
            "distribution": "vmf",
            "hidden_dim": 128,
            "latent_dim": 50,
            "text_field_embedder": {
                "token_embedders": {
                    "tokens": {
                        "type": "embedding",
                        "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.6B.50d.txt.gz",
                        "embedding_dim": 50,
                        "vocab_namespace": "full",
                        "trainable": true
                    },
                }
            },
            "encoder": {
            "type": "lstm",
            "num_layers": 1,
            "bidirectional": true,
            "input_size": 50,
            "hidden_size": 128, 
            },
            "decoder": {
                "type": "lstm",
                "num_layers": 1,
                "bidirectional": true,
                "input_size": 256,
                "hidden_size": 128, 
            },
        },
        "classifier":{
            "input_dim": 256,
            "num_layers": 1,
            "hidden_dims": 128,
            "activations": "relu",
        }        
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["tokens", "num_tokens"]],
        "batch_size": 32
    },
     "trainer": {
        "optimizer": {
            "type": "adam",
            "lr": 0.0004
        },
        "validation_metric": "+accuracy",
        "num_serialized_models_to_keep": 2,
        "num_epochs": 75,
        "grad_norm": 10.0,
        "patience": 5,
        "cuda_device": 0,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 0
        }
    }
}
