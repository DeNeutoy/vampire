{
    "random_seed": 23,
    "numpy_seed": 11,
    "pytorch_seed": 555,
    "dataset_reader": {
        "type": "textcat",
        "debug": false,
    },
    "validation_dataset_reader": {
        "type": "textcat",
        "debug": false,
    },
    "vocabulary":{
        "max_vocab_size": 30000
        },
  "datasets_for_vocab_creation": ["train"],
  "train_data_path": "/home/ubuntu/train.jsonl",
  "validation_data_path": "/home/ubuntu/test.jsonl",
    "model": {
        "type": "vae_classifier",   
        "pretrained_vae_file": "/home/ubuntu/vae/model_logs/rnn_vae_full/model.tar.gz",
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["tokens", "num_tokens"]],
        "batch_size": 32
    },
     "trainer": {
        "optimizer": {
            "type": "adam",
            "lr": 0.0004
        },
        "validation_metric": "+accuracy",
        "num_serialized_models_to_keep": 2,
        "num_epochs": 75,
        "grad_norm": 10.0,
        "patience": 10,
        "cuda_device": 1,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 0
        }
    }
}
