{
    "random_seed": 23,
    "numpy_seed": 11,
    "pytorch_seed": 555,
    "dataset_reader": {
        "type": "textcat",
        "debug": false,
        "read_filtered_data": true,
        "remove_labels": false,
        "max_seq_length": 50
    },
    "validation_dataset_reader": {
        "type": "textcat",
        "debug": false,
        "read_filtered_data": true,
        "remove_labels": false,
        "max_seq_length": 50
    },
    "vocabulary":{
        "max_vocab_size": 5000,
        "min_count": {"full" : 1},
        "tokens_to_add": {
            "full": ["@@start@@", "@@end@@"]
            }
    },
  "datasets_for_vocab_creation": ["train"],
  "train_data_path": "/home/ubuntu/data/imdb/train_labelled.filtered.jsonl",
  "validation_data_path": "/home/ubuntu/data/imdb/valid.filtered.jsonl",
    "model": {
        "type": "semisupervised_vae",   
        "vae": {
            "type": "SCHOLAR",
            "background_data_path": "/home/ubuntu/data/imdb/train_labelled.bgfreq.filtered.json",
            "update_bg": true,
            "distribution": {
                "type": "gaussian",
                "apply_batchnorm": true,
                "theta_dropout": 0.2,
                "theta_softmax": true
            },
            "hidden_dim": 300,
            "latent_dim": 50,
            "kl_weight_annealing": "constant",
            "word_dropout": 0.5,
            "dropout": 0.2,
            "text_field_embedder": {
                "token_embedders": {
                    "tokens": {
                        "type": "onehot_token_embedder",
                        "vocab_namespace": "full"
                    }
                }
            },
            "encoder": {
                "type": "bow",
                "hidden_dim": 256
            },
            "decoder": {
                "type": "bow",
                "apply_batchnorm": true,
                "batchnorm_annealing": "reverse_sigmoid"
            },
            "classifier":{
                "type": "feedforward",
                "generate_labels": true
            }
        }
        
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["tokens", "num_tokens"]],
        "batch_size": 200
    },
     "trainer": {
        "optimizer": {
            "type": "adam",
            "lr": 0.002
        },
        "validation_metric": "+accuracy",
        "num_serialized_models_to_keep": 2,
        "num_epochs": 100,
        "grad_norm": 10.0,
        "patience": 5,
        "cuda_device": 0,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 0
        }
    }
}

