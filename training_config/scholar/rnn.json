{
    "random_seed": 23,
    "numpy_seed": 11,
    "pytorch_seed": 555,
    "dataset_reader": {
        "type": "textcat",
        "debug": false,
        "remove_labels": false,
        "max_seq_length": 50
    },
    "validation_dataset_reader": {
        "type": "textcat",
        "debug": false,
        "remove_labels": false,
        "max_seq_length": 50
    },
    "vocabulary":{
        "min_count": {"full" : 1},
        "tokens_to_add": {
            "full": ["@@start@@", "@@end@@"]
            }
    },
  "datasets_for_vocab_creation": ["train"],
  "train_data_path": "/home/ubuntu/data/ag/train.jsonl",
  "validation_data_path": "/home/ubuntu/data/ag/test.jsonl",
    "model": {
        "type": "semisupervised_vae",   
        "vae": {
            "type": "SCHOLAR",
            "background_data_path": "/home/ubuntu/data/ag/train.bgfreq.json",
            "update_bg": true,
            "distribution": {
                "type": "logistic_normal",
                "alpha": 1.0,
                "apply_batchnorm": true
            },
            "hidden_dim": 256,
            "latent_dim": 50,
            "kl_weight_annealing": "sigmoid",
            "word_dropout": 0.0,
            "dropout": 0.5,
            "text_field_embedder": {
                "token_embedders": {
                    "tokens": {
                        "type": "embedding",
                        "embedding_dim": 300,
                        "vocab_namespace": "full",
                        "trainable": true
                    }
                }
            },
            "encoder": {
                "type": "seq2seq",
                "architecture": {
                    "type": "lstm",
                    "num_layers": 1,
                    "bidirectional": true,
                    "input_size": 300,
                    "hidden_size": 256
                }
            },
            "decoder": {
                "type": "seq2seq",
                "architecture": {
                    "type": "lstm",
                    "num_layers": 1,
                    "bidirectional": true,
                    "input_size": 350,
                    "hidden_size": 256
                },
                "apply_batchnorm": true
            },
            "classifier":{
                "type": "feedforward",
                "generate_labels": false
            }
        }
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["tokens", "num_tokens"]],
        "batch_size": 32
    },
     "trainer": {
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        },
        "validation_metric": "+accuracy",
        "num_serialized_models_to_keep": 2,
        "num_epochs": 100,
        "grad_norm": 10.0,
        "patience": 5,
        "cuda_device": 0,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 0
        }
    }
}
