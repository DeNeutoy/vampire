{
    "dataset_reader": {
        "type": "textcat",
        "debug": false,
        "add_stop_end_tokens": true,
        "read_filtered_data": false,
        "remove_labels": false,
        "max_seq_length": 400
    },
    "validation_dataset_reader": {
        "type": "textcat",
        "debug": false,
        "add_stop_end_tokens": true,
        "read_filtered_data": false,
        "remove_labels": false,
        "max_seq_length": 400
    },
    "vocabulary":{
        "min_count": {"full" : 1},
        "tokens_to_add": {  
            "full": ["@@start@@", "@@end@@"]
            }
    },
  "datasets_for_vocab_creation": ["train"],
  "train_data_path": "/home/ubuntu/data/imdb_scholar/train.tokens",
  "validation_data_path": "/home/ubuntu/data/imdb_scholar/test.tokens",
    "model": {
        "type": "nvrnn",
        "nll_objective": "reconstruction", 
        "track_topics": true,
        "reference_vocabulary":  "/home/ubuntu/data/imdb_scholar/vocabulary/full.txt",
        "reference_count_matrix":  "/home/ubuntu/data/imdb_scholar/test.npz",
        "distribution": {
            "type": "logistic_normal",
            "apply_batchnorm": false,
            "theta_dropout": 0.2,
            "theta_softmax": true
        },
        "hidden_dim": 256,
        "latent_dim": 50,
        "kl_weight_annealing": "sigmoid",
        "word_dropout": 1.0,
        "dropout": 0.5,
        "continuous_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 300,
                    "pretrained_file": "/home/ubuntu/data/word-vecs",
                    "vocab_namespace": "full",
                    "trainable": true
                }
            }
        },
        "encoder": {
            "type": "seq2seq__maxpool",
            "architecture": {
                "type": "lstm",
                "num_layers": 2,
                "bidirectional": true,
                "input_size": 300,
                "hidden_size": 256,
                "dropout": 0.2
            }
        },
        "decoder": {
            "type": "seq2seq",
            "architecture": {
                "type": "lstm",
                "num_layers": 2,
                "bidirectional": true,
                "input_size": 350,
                "hidden_size": 256,
                "dropout": 0.2
            },
            "apply_batchnorm": false
        },
        "classifier": {
            "type": "feedforward_generative"
        }
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["tokens", "num_tokens"]],
        "batch_size": 8
    },
     "trainer": {
        "optimizer": {
            "type": "adam",
            "lr": 0.002
        },
        "validation_metric": "-nll",
        "num_serialized_models_to_keep": 2,
        "num_epochs": 100,
        "grad_norm": 10.0,
        "patience": 100,
        "cuda_device": 3,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 0
        }
    }
}
