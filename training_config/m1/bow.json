{
    "random_seed": 23,
    "numpy_seed": 11,
    "pytorch_seed": 555,
    "dataset_reader": {
        "type": "textcat",
        "debug": false,
        "remove_labels": true,
        "max_seq_length": 50
    },
    "validation_dataset_reader": {
        "type": "textcat",
        "debug": false,
        "remove_labels": true,
        "max_seq_length": 50
    },
    "vocabulary":{
        "min_count": {"full" : 3},
        "tokens_to_add": {
            "full": ["@@start@@", "@@end@@"]
            }
    },
  "datasets_for_vocab_creation": ["train"],
  "train_data_path": "/home/ubuntu/data/ptb/train.jsonl",
  "validation_data_path": "/home/ubuntu/data/ptb/dev.jsonl",
    "model": {
        "type": "unsupervised_vae",   
        "vae": {
            "type": "M1",
            "distribution": {
                "type": "gaussian"
            },
            "hidden_dim": 400,
            "latent_dim": 50,
            "kl_weight_annealing": "sigmoid",
            "word_dropout": 0.5,
            "embedding_dropout": 0.5,
            "text_field_embedder": {
                "token_embedders": {
                    "tokens": {
                        "type": "onehot_token_embedder",
                        "vocab_namespace": "full"
                    }
                }
            },
            "encoder": {
                "type": "bow",
                "hidden_dim": 256
            },
            "decoder": {
                "type": "bow",
                "hidden_dim": 256
            }
        }
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["tokens", "num_tokens"]],
        "batch_size": 32,
        "track_epoch": true
    },
     "trainer": {
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        },
        "validation_metric": "-perp",
        "num_serialized_models_to_keep": 2,
        "num_epochs": 100,
        "grad_norm": 10.0,
        "patience": 5,
        "cuda_device": 0,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 0
        }
    }
}

