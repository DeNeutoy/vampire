{
    "random_seed": 23,
    "numpy_seed": 11,
    "pytorch_seed": 555,
    "dataset_reader": {
        "type": "textcat",
        "debug": false,
        "remove_labels": true,
        "max_seq_length": 50
    },
    "validation_dataset_reader": {
        "type": "textcat",
        "debug": false,
        "remove_labels": true,
        "max_seq_length": 50
    },
    "vocabulary":{
        "max_vocab_size": 30000
        },
  "datasets_for_vocab_creation": ["train"],
  "train_data_path": "/home/ubuntu/data/ptb/train.jsonl",
  "validation_data_path": "/home/ubuntu/data/ptb/dev.jsonl",
    "model": {
        "type": "unsupervised_vae",   
        "vae": {
            "type": "M1",
            "hidden_dim": 400,
            "latent_dim": 50,
            "word_dropout": 0.5,
            "text_field_embedder": {
                "token_embedders": {
                    "tokens": {
                        "type": "embedding",
                        "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.6B.50d.txt.gz",
                        "embedding_dim": 50,
                        "vocab_namespace": "full",
                        "trainable": true
                    }
                }
            },
            "encoder": {
                "type": "seq2seq",
                "architecture": {
                    "type": "lstm",
                    "num_layers": 1,
                    "bidirectional": true,
                    "input_size": 50,
                    "hidden_size": 400
                },
                "aggregate": "maxpool"
            },
            "distribution": {
                "type": "gaussian"
            },
            "decoder": {
                "type": "seq2seq",
                "architecture": {
                    "type": "lstm",
                    "num_layers": 1,
                    "bidirectional": true,
                    "input_size": 50,
                    "hidden_size": 400
                }
            }
        }
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["tokens", "num_tokens"]],
        "batch_size": 64,
        "track_epoch": true
    },
     "trainer": {
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        },
        "validation_metric": "-perp",
        "num_serialized_models_to_keep": 2,
        "num_epochs": 100,
        "grad_norm": 10.0,
        "patience": 100,
        "cuda_device": 0,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 0
        }
    }
}
