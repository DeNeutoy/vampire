{
    "random_seed": 23,
    "numpy_seed": 11,
    "pytorch_seed": 555,
    "dataset_reader": {
        "type": "textcat",
        "debug": false,
        "remove_labels": true,
        "max_seq_length": 60
    },
    "validation_dataset_reader": {
        "type": "textcat",
        "debug": false,
        "remove_labels": true,
        "max_seq_length": 60
    },
    "vocabulary":{
        "max_vocab_size": 10000,
        "min_count": {"full" : 1},
        "tokens_to_add": {
            "full": ["@@start@@", "@@end@@"]
            }
    },
  "datasets_for_vocab_creation": ["train"],
  "train_data_path": "/home/ubuntu/data/ptb/train.jsonl",
  "validation_data_path": "/home/ubuntu/data/ptb/dev.jsonl",
    "model": {
        "type": "unsupervised_vae",   
        "vae": {
            "type": "M1",
            "hidden_dim": 256,
            "latent_dim": 16,
            "distribution": {
                "type": "gaussian"
            },
            "word_dropout": 0.5,
            "embedding_dropout": 0.2,
            "kl_weight_annealing": "sigmoid",
            "text_field_embedder": {
                "token_embedders": {
                    "tokens": {
                        "type": "embedding",
                        "embedding_dim": 300,
                        "vocab_namespace": "full",
                        "trainable": true
                    }
                }
            },
            "encoder": {
                "type": "seq2seq",
                "architecture": {
                    "type": "rnn",
                    "num_layers": 1,
                    "bidirectional": false,
                    "input_size": 300,
                    "hidden_size": 256
                }
            },
            "decoder": {
                "type": "seq2seq",
                "architecture": {
                    "type": "rnn",
                    "num_layers": 1,
                    "bidirectional": false,
                    "input_size": 300,
                    "hidden_size": 256
                }
            }
        }
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["tokens", "num_tokens"]],
        "batch_size": 32,
        "track_epoch": true
    },
     "trainer": {
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        },
        "validation_metric": "-perp",
        "num_serialized_models_to_keep": 2,
        "num_epochs": 100,
        "grad_norm": 10.0,
        "patience": 100,
        "cuda_device": 0
    }
}
